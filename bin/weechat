#!/bin/bash
set -e

BASEDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
cd "$BASEDIR/.."

if [[ -f .env ]]; then
  source .env
fi

instanceName=$(lib/find-instance-name)
weechat_docker_image="gcr.io/$CLOUDSDK_CORE_PROJECT/weechat"

gcloud compute ssh -t "$instanceName" --command "sudo docker attach \$(sudo docker ps | grep \"$weechat_docker_image\" | cut -f1 -d ' ')"
